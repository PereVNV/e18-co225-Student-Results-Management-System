<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:foregroundTint="@color/indigo"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/roboto_bold"
        android:foregroundTint="@color/indigo"
        android:letterSpacing="@dimen/material_emphasis_disabled"
        android:text="@string/welcome_to_srms"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/indigo"
        android:textColorHighlight="@color/indigo_v"
        android:textColorHint="@color/indigo"
        android:textColorLink="@color/indigo_v"
        android:textFontWeight="5000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />


    <TextView
        android:id="@+id/textView2"
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="316dp"
        android:layout_height="70dp"
        android:layout_marginBottom="156dp"
        android:fontFamily="@font/architectsdaughter_regular"
        android:letterSpacing="@dimen/cardview_compat_inset_shadow"
        android:text="For Success, Choose The Best!"
        android:textAlignment="center"
        android:textColor="@color/indigo"
        android:textColorHighlight="@color/indigo_v"
        android:textColorHint="@color/indigo"
        android:textColorLink="@color/indigo_v"
        android:textFontWeight="3000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="314dp"
        android:layout_height="48dp"
        android:layout_marginBottom="244dp"
        android:fontFamily="@font/fredoka_variablefont"
        android:letterSpacing="@dimen/cardview_compat_inset_shadow"
        android:text="Together we help you check your grades and build your progress"
        android:textAlignment="center"
        android:textColor="@color/indigo"
        android:textColorHighlight="@color/indigo_v"
        android:textColorHint="@color/indigo"
        android:textColorLink="@color/indigo_v"
        android:textFontWeight="3000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.552"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/button"
        android:layout_width="121dp"
        android:layout_height="48dp"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="92dp"
        android:text="LOGIN"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="122dp"
        android:layout_height="51dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="92dp"
        android:text="REGISTER"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="409dp"
        android:layout_height="284dp"
        android:layout_marginTop="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg" />

</androidx.constraintlayout.widget.ConstraintLayout>